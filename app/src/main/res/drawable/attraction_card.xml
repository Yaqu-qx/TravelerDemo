<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--阴影-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1F7F7F7F" />
            <corners android:radius="100dp" />
        </shape>
    </item>
    <!--前景-->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="100dp" />
        </shape>
    </item>
</layer-list>